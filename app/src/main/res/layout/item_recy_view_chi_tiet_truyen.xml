<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:src="@drawable/truyen1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:id="@+id/image_ct_anh_truyen"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên truyện"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/image_ct_anh_truyen"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_ct_ten_truyen"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_ct_ten_truyen"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="Đọc chuyện"
        android:id="@+id/txt_ct_noi_dung_truyen"
        />


</androidx.constraintlayout.widget.ConstraintLayout>